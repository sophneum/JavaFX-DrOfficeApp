<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?> 
<?import javafx.scene.layout.AnchorPane ?>

<AnchorPane styleClass="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yohealth.controllers.AccountController">
<VBox alignment="TOP_CENTER" spacing="20.0" maxHeight="-Infinity" VBox.vgrow="always" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
   <Label text="Welcome to YoHealth!" style="-fx-text-fill: black; -fx-font-size: 48px;" >
   </Label>

   <Label text="Login to your YoHealth Account" style="-fx-text-fill: #EBEBEB; -fx-font-size: 32px;" alignment="CENTER">
      <VBox.margin>
         <Insets top="200.0"/>
      </VBox.margin>
   </Label>

   <TextField fx:id="usernameTextField" promptText="username" focusTraversable="false" style="-fx-background-color: #EBEBEB; -fx-font-size: 25px; -fx-alignment: center; -fx-max-width: 300px; -fx-padding: 10px; ">
      <VBox.margin>
         <Insets top="20.0" left="100.0" right="100.0"/>
      </VBox.margin>
   </TextField>

   <Button mnemonicParsing="false" onAction="#onLoginButtonClicked" text="Login" style="-fx-background-color: #71816D; -fx-font-size: 32px; -fx-text-fill: #EBEBEB; -fx-padding: 10px 20px; -fx-min-width: 200px; -fx-alignment: center;">
      <VBox.margin>
         <Insets top="20.0"/>
      </VBox.margin>
   </Button>

   <Label text="Trouble logging in? Call us at (123) 456-7890" style="-fx-text-fill: #E49273;" alignment="BOTTOM_CENTER">
      <VBox.margin>
         <Insets top="100.0" bottom="20.0"/>
      </VBox.margin>
   </Label>

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>
</VBox>
</AnchorPane>